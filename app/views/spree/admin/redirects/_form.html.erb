<div data-hook="admin_redirect_form_new_url">
  <%= f.field_container :old_url, class: ['form-group'] do %>
    <%= f.label :old_url, raw(Spree.t(:old_url) + content_tag(:span, ' *', class: 'required')) %>
    <%= f.text_field :old_url, class: 'form-control title' %>
    <%= f.error_message_on :old_url %>
  <% end %>
</div>      

